*---------------------------------------------------------------------------------------------------------
* S100Computers Serial I/O Board ports
*---------------------------------------------------------------------------------------------------------
ZSCC_B_CTL          =         __ports_start__ + 0xA0
ZSCC_A_CTL          =         ZSCC_B_CTL + 0x1
ZSCC_B_DATA         =         ZSCC_B_CTL + 0x2
ZSCC_A_DATA         =         ZSCC_B_CTL + 0x3

USB_STATUS          =         __ports_start__ + 0xAA
USB_DATA            =         __ports_start__ + 0xAC

*---------------------------------------------------------------------------------------------------------
* Z8530 Status Register (RR0) bits
*---------------------------------------------------------------------------------------------------------
ZSCC_RDA            =         0
ZSCC_TBE            =         2
ZSCC_DCD            =         3
ZSCC_CTS            =         5

*---------------------------------------------------------------------------------------------------------
* Z8530 IP Register (RR3) bits
*---------------------------------------------------------------------------------------------------------
ZSCC_B_EXT_IP       =         0
ZSCC_B_TX_IP        =         1
ZSCC_B_RX_IP        =         2
ZSCC_A_EXT_IP       =         3
ZSCC_A_TX_IP        =         4
ZSCC_A_RX_IP        =         5


USB_TBE             =         0x40
USB_RDA             =         0x80
